@model EntityLayer.Concrete.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@using (Html.BeginForm("Index", "KullaniciAdiSifre", FormMethod.Post, new { @class = "pt-3" }))
{

    @Html.TextBoxFor(x => x.UserID, new { style = "display: none;" })
    <div class="form-group col-8  ">
        @Html.Label("Yeni Kullanıcı Adı")
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group col-8  ">
        @Html.Label("Yeni Şifre")
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", type = "password", required = "required" })
    </div>

    <div class="col-8 ">
        <button class="ekle-button deleteButton px-5 py-2">Güncelle</button>

    </div>
}
<br /><br />
@if (ViewBag.basarili != null)
{
    <h6>@ViewBag.basarili</h6>
}


