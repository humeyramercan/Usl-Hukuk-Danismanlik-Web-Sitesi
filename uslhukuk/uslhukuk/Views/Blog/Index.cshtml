@using PagedList
@using PagedList.Mvc
@using EntityLayer.Concrete
@model IPagedList<Blog>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
    <style>
    .ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: white;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }
    </style>
 
<div class="blog-arkaplan bd-bt" style="min-height:100vh">
    @foreach (var item in Model)
    {
<div class="row mb-5" data-aos="fade-right" data-aos-duration="1100">
    <div class="card mx-4">
        <div class="card-body">
            <h5 class="card-title">@item.Baslik</h5>
            <h6 class="card-subtitle mb-2 text-muted"> <i class="far fa-calendar-alt blog-icon"> @(((DateTime) item.BlogTarihi).ToString("dd-MMM-yyyy"))</i> &nbsp; <i class="fas fa-user blog-icon"> @item.Yazar</i>  </h6>
            <a href="/Blog/BlogDetay/@item.BlogID" class="card-link">Blog Detaylarına Git...</a>
        </div>
    </div>
</div>}

    <div class="pagination ">
        <div class="mx-auto"> @Html.PagedListPager(Model, page => Url.Action("Index", "Blog", new { page }))</div>

    </div>
</div>

